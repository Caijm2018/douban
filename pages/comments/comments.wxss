.cmm-container{
  padding: 20rpx 30rpx;
}

.item-group{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.item-group .thumbnail{
  width: 40rpx;
  height: 50rpx;
}

.item-group .item-title{
  font-size: 30rpx;
  color: #41be57;
  margin-left: 10rpx;
  margin-right: 10rpx;
}

.item-group .item-rate{
  font-size: 28rpx;
  color: #ccc;
}

.comment-title{
  margin-top: 60rpx;
  margin-bottom: 30rpx;
}

.page-btn-group{
  display: flex;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  justify-content: space-between;
  align-items: center;
}

.page-btn{
  flex: 1;
  height: 60rpx;
  color: #fff;
  background-color: #41be57;
  line-height: 60rpx;
}